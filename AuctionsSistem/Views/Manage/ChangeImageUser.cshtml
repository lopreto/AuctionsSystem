@model AuctionsSystem.Models.Identity.ChangeImageUserViewModel
@{
    ViewBag.Title = "Cambiar fotografia";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeImageUser", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <h4>Cambiar fotografia</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.ImagePath, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="file" name="ImageFile" required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cambiar" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}