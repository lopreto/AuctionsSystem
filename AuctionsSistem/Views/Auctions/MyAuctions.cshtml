@model IEnumerable<AuctionsSystem.Models.AuctionModel>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mis Subastas</h2>

<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitialDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            Participación
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="@item.ImagePath" width="100px" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Comments)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price) £
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.InitialDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FinalDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Active)
    </td>

    <td>
        @switch (item.AuctionParticipantType)
        {
            case Infrastructure.Enums.AuctionParticipantType.Comprador:
                <div>Comprador</div>
                break;
            case Infrastructure.Enums.AuctionParticipantType.Vendedor:
                <div>Vendedor</div>
                break;
            case Infrastructure.Enums.AuctionParticipantType.Participante:
                <div>Participante</div>
                break;
            default:
                break;
        }
    </td>
    <td>
        @if (@User.Identity.GetUserId() == item.UserId)
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <label> | </label>
        }
        @Html.ActionLink("Details", "Details", new { id = item.Id })
    </td>
</tr>
    }

</table>
